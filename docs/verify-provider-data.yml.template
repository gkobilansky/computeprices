name: Verify Provider Data

on:
  schedule:
    # Run weekly on Mondays at 9:00 AM UTC
    - cron: '0 9 * * 1'
  workflow_dispatch:
    inputs:
      provider:
        description: 'Specific provider slug to verify (leave empty for auto-rotation)'
        required: false
        type: string

permissions:
  contents: write
  pull-requests: write

jobs:
  verify-provider:
    runs-on: ubuntu-latest
    timeout-minutes: 30

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '22'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Determine provider to verify
        id: provider
        run: |
          if [ -n "${{ github.event.inputs.provider }}" ]; then
            echo "slug=${{ github.event.inputs.provider }}" >> $GITHUB_OUTPUT
          else
            # Auto-rotate: pick provider based on week number
            WEEK=$(date +%V)
            PROVIDERS=$(ls data/providers/*.json | xargs -n1 basename | sed 's/.json//' | sort)
            PROVIDER_COUNT=$(echo "$PROVIDERS" | wc -l)
            INDEX=$((WEEK % PROVIDER_COUNT))
            PROVIDER=$(echo "$PROVIDERS" | sed -n "$((INDEX + 1))p")
            echo "slug=$PROVIDER" >> $GITHUB_OUTPUT
            echo "Auto-selected provider for week $WEEK: $PROVIDER"
          fi

      - name: Run Claude Code verification
        id: claude
        uses: anthropics/claude-code-action@beta
        with:
          anthropic_api_key: ${{ secrets.ANTHROPIC_API_KEY }}
          direct_prompt: |
            Verify and update provider data for: ${{ steps.provider.outputs.slug }}

            ## Instructions

            1. Read the provider file at: data/providers/${{ steps.provider.outputs.slug }}.json

            2. Research the provider's current information by visiting their website and documentation.
               Focus on verifying:
               - Provider name and description accuracy
               - Website URL (link) and docs URL (docsLink)
               - Features list - are they current and accurate?
               - Pros and cons - do they reflect current state?
               - Getting started steps - are they still valid?
               - GPU/compute services offered - any new offerings?
               - Category classification - is it still appropriate?

            3. If you find ANY outdated, incorrect, or missing information:
               - Edit the provider JSON file with corrections
               - Be conservative - only change what's clearly wrong or outdated
               - Preserve the existing structure and formatting

            4. If the data is accurate and up-to-date, make no changes.

            5. After verification, output a summary of:
               - What you checked
               - What changes you made (if any)
               - Confidence level in your verification

            ## Important Notes
            - Do NOT change the provider's UUID (id field)
            - Do NOT change the slug
            - Preserve JSON formatting (2-space indent)
            - Only make factual corrections, not stylistic changes

      - name: Check for changes
        id: changes
        run: |
          if git diff --quiet data/providers/${{ steps.provider.outputs.slug }}.json; then
            echo "has_changes=false" >> $GITHUB_OUTPUT
            echo "No changes detected for ${{ steps.provider.outputs.slug }}"
          else
            echo "has_changes=true" >> $GITHUB_OUTPUT
            echo "Changes detected for ${{ steps.provider.outputs.slug }}"
            git diff data/providers/${{ steps.provider.outputs.slug }}.json
          fi

      - name: Regenerate aggregated providers
        if: steps.changes.outputs.has_changes == 'true'
        run: npm run providers:aggregate

      - name: Create Pull Request
        if: steps.changes.outputs.has_changes == 'true'
        uses: peter-evans/create-pull-request@v6
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          commit-message: "chore: update ${{ steps.provider.outputs.slug }} provider data"
          title: "Update provider data: ${{ steps.provider.outputs.slug }}"
          body: |
            ## Provider Data Update

            This PR was automatically generated by the weekly provider verification workflow.

            **Provider:** ${{ steps.provider.outputs.slug }}

            ### Changes

            Please review the changes to `data/providers/${{ steps.provider.outputs.slug }}.json` below.

            ### Verification Summary

            ${{ steps.claude.outputs.conclusion || 'See workflow logs for details.' }}

            ---

            *This PR was created automatically by Claude Code. Please review the changes carefully before merging.*
          branch: update-provider-${{ steps.provider.outputs.slug }}
          delete-branch: true
          labels: |
            automated
            provider-data
